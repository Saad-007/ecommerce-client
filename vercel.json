{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://e-commerce-backend-production-36dc.up.railway.app/api/$1"
    },
    {
      "src": "/_next/static/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": { "Content-Type": "text/html; charset=utf-8" }
    }
  ]
}